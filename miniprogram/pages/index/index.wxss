/**index.wxss**/
page {
  min-height: 100vh;
  background-color: #f5f6fa;
  color: #333333;
}

.qq-page {
  min-height: 100vh;
  background-color: #f5f6fa;
}

.qq-bg {
  position: relative;
  overflow: hidden;
}

.qq-topbar {
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 26rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, rgba(18, 183, 245, 0.18) 0%, rgba(18, 183, 245, 0.02) 55%, rgba(245, 246, 250, 0) 100%);
}

.qq-top-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  letter-spacing: 1rpx;
}

.qq-menu {
  width: 64rpx;
  height: 64rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.85);
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8rpx;
  padding: 14rpx 16rpx;
  box-sizing: border-box;
}

.qq-menu-line {
  height: 4rpx;
  border-radius: 999px;
  background: #9aa6b2;
}

.qq-menu-line.short {
  width: 70%;
}

.qq-top-action {
  width: 64rpx;
  height: 64rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.85);
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.qq-more-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 999px;
  background: #9aa6b2;
}

.qq-bubbles {
  position: absolute;
  inset: 0;
  pointer-events: none;
}

.bubble {
  position: absolute;
  border-radius: 999px;
  background: radial-gradient(circle at 30% 30%, rgba(18, 183, 245, 0.28) 0%, rgba(18, 183, 245, 0.08) 52%, rgba(18, 183, 245, 0) 70%);
  filter: blur(1px);
  opacity: 0.9;
  animation: bubbleFloat 8s ease-in-out infinite;
}

.bubble.b1 {
  width: 420rpx;
  height: 420rpx;
  left: -180rpx;
  top: 70rpx;
  animation-duration: 9.5s;
}

.bubble.b2 {
  width: 320rpx;
  height: 320rpx;
  right: -120rpx;
  top: 160rpx;
  background: radial-gradient(circle at 30% 30%, rgba(0, 153, 255, 0.20) 0%, rgba(0, 153, 255, 0.06) 55%, rgba(0, 153, 255, 0) 72%);
  animation-duration: 10.5s;
  animation-delay: -2s;
}

.bubble.b3 {
  width: 240rpx;
  height: 240rpx;
  left: 60rpx;
  top: 320rpx;
  background: radial-gradient(circle at 30% 30%, rgba(47, 179, 255, 0.18) 0%, rgba(47, 179, 255, 0.05) 55%, rgba(47, 179, 255, 0) 72%);
  animation-duration: 8.8s;
  animation-delay: -1.4s;
}

.bubble.b4 {
  width: 520rpx;
  height: 520rpx;
  right: -220rpx;
  top: 420rpx;
  background: radial-gradient(circle at 30% 30%, rgba(18, 183, 245, 0.16) 0%, rgba(18, 183, 245, 0.04) 58%, rgba(18, 183, 245, 0) 75%);
  animation-duration: 12s;
  animation-delay: -3s;
}

.qq-content {
  padding: 10rpx 26rpx 44rpx;
  box-sizing: border-box;
}

.qq-card {
  background: #ffffff;
  border-radius: 26rpx;
  padding: 28rpx;
  box-sizing: border-box;
  box-shadow: 0 14rpx 30rpx rgba(0, 0, 0, 0.06);
}

.qq-enter {
  animation: qqIn 0.5s ease both;
}

.qq-card-header {
  margin-bottom: 24rpx;
}

.qq-card-header.center {
  text-align: center;
}

.qq-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #333333;
}

.qq-subtitle {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999999;
}

.qq-avatar-btn {
  margin: 10rpx auto 18rpx;
  padding: 0;
  width: 100%;
  background: transparent;
  border: 0;
}

.qq-avatar-btn:active {
  transform: scale(0.98);
}

.qq-avatar-wrap {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  border-radius: 999px;
}

.qq-avatar-wrap.large {
  width: 168rpx;
  height: 168rpx;
  margin: 0;
}

.qq-avatar {
  width: 100%;
  height: 100%;
  border-radius: 999px;
  border: 6rpx solid #ffffff;
  box-sizing: border-box;
  background: #f2f2f2;
  box-shadow: 0 10rpx 20rpx rgba(18, 183, 245, 0.16);
}

.qq-avatar-ring {
  position: absolute;
  inset: -6rpx;
  border-radius: 999px;
  border: 2rpx solid rgba(18, 183, 245, 0.35);
  box-shadow: 0 0 0 8rpx rgba(18, 183, 245, 0.08) inset;
  pointer-events: none;
}

.qq-status-dot {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 26rpx;
  height: 26rpx;
  border-radius: 999px;
  background: #2bd97b;
  border: 5rpx solid #ffffff;
  box-sizing: border-box;
  box-shadow: 0 6rpx 14rpx rgba(43, 217, 123, 0.25);
}

.qq-avatar-tip {
  display: block;
  margin-top: 14rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}

.qq-field {
  margin-top: 10rpx;
}

.qq-label {
  display: block;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.qq-input {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  padding: 0 28rpx;
  box-sizing: border-box;
  background: #f2f2f2;
  font-size: 30rpx;
  color: #333333;
}

.qq-placeholder {
  color: #b3b3b3;
}

.qq-btn {
  margin-top: 22rpx;
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 48rpx;
  background: linear-gradient(90deg, #2fb3ff 0%, #0099ff 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  box-shadow: 0 10rpx 22rpx rgba(18, 183, 245, 0.30);
  border: 0;
  transition: transform 0.15s ease, filter 0.15s ease;
}

.qq-btn--hover {
  filter: brightness(1.03);
}

.qq-btn:active {
  transform: scale(0.98);
}

.qq-note {
  margin-top: 18rpx;
  padding: 18rpx 20rpx;
  border-radius: 20rpx;
  background: #f5f6fa;
  color: #999999;
  text-align: center;
}

.qq-note-text {
  font-size: 24rpx;
}

.qq-profile {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 18rpx;
}

.qq-profile-meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.qq-name-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  gap: 10rpx;
}

.qq-name {
  font-size: 40rpx;
  font-weight: 900;
  color: #333333;
}

.qq-badge {
  height: 34rpx;
  padding: 0 12rpx;
  border-radius: 999px;
  background: linear-gradient(90deg, rgba(255, 200, 46, 0.95) 0%, rgba(255, 149, 0, 0.95) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.qq-badge-text {
  font-size: 18rpx;
  color: #ffffff;
  font-weight: 800;
  letter-spacing: 1rpx;
}

.qq-level {
  height: 34rpx;
  padding: 0 12rpx;
  border-radius: 999px;
  background: rgba(18, 183, 245, 0.12);
  border: 1px solid rgba(18, 183, 245, 0.22);
  display: flex;
  align-items: center;
  justify-content: center;
}

.qq-level-text {
  font-size: 18rpx;
  color: #0099ff;
  font-weight: 800;
}

.qq-desc {
  font-size: 24rpx;
  color: #999999;
}

.qq-quick {
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
  gap: 14rpx;
}

.qq-quick-item {
  flex: 1;
  border-radius: 20rpx;
  padding: 18rpx 16rpx;
  background: #f5f6fa;
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.03);
}

.qq-quick-title {
  display: block;
  font-size: 26rpx;
  font-weight: 800;
  color: #333333;
}

.qq-quick-sub {
  display: block;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999999;
}

.qq-footer {
  padding: 26rpx 0 0;
  text-align: center;
}

.qq-footer-text {
  font-size: 24rpx;
  color: #999999;
}

@keyframes qqIn {
  from {
    opacity: 0;
    transform: translate3d(0, 16rpx, 0);
  }
  to {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}

@keyframes bubbleFloat {
  0% {
    transform: translate3d(0, 0, 0) scale(1);
  }
  50% {
    transform: translate3d(0, -16rpx, 0) scale(1.02);
  }
  100% {
    transform: translate3d(0, 0, 0) scale(1);
  }
}
